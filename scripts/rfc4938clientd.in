# rfc4938client       This shell script enables the automatic use of rfc4938client
#
# description:  Enable run of rfc4938client
# processname:  rfc4938client
#


appname=rfc4938client

configfile=@configdir@/rfc4938.conf

execdir=@execdir@

lockfile=/tmp/$appname.lock

RETVAL=0

start() {
        echo -n $"Enabling $appname: "
        $execdir/$appname -f $configfile &
        touch "$lockfile"
        RETVAL=$?
        echo
}

stop() {
        echo -n $"Disabling $appname: "
        rm -f "$lockfile"
        killall $appname
        RETVAL=$?
        echo
}

restart() {
        stop
        start
}

case "$1" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart|force-reload)
        restart
        ;;
  reload)
        ;;
  condrestart)
        [ -f "$lockfile" ] && restart
        ;;
  status)
        if [ -f $lockfile ]; then
                echo $"$appname is enabled."
                RETVAL=0
        else
                echo $"$appname is disabled."
                RETVAL=3
        fi
        ;;
  *)
        echo $"Usage: $0 {start|stop|status|restart|reload|force-reload|condrestart}"
        exit 1
esac

exit $RETVAL

